@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Resend confirmation email";
}

<div class="card">
    <div class="card-body">

        <div class="text-center">
            <h1>@ViewData["Title"]</h1>
            <p class="lead">We need to confirm your account</p>
        </div>

        <hr />

        <p>Please submit this form and we will send you another email with a confirmation link.</p>

        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            @if (Model.Message != null)
            {
                <div class="alert alert-success mb-3">
                    @Model.Message
                </div>
            }
            <div class="mb-3">
                <label asp-for="Input.UsernameOrEmail"></label>
                <input asp-for="Input.UsernameOrEmail" class="form-control" />
                <span asp-validation-for="Input.UsernameOrEmail" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary">Resend Email</button>
                <div>
                    <a asp-page="Login" class="btn btn-outline-primary">Login</a>
                </div>
            </div>
        </form>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
