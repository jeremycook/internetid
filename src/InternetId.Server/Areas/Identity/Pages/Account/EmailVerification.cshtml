@page
@model EmailVerificationModel
@{
    ViewData["Title"] = "Email verification";
}

<div class="card">
    <div class="card-body">

        <div class="text-center">
            <h1>@ViewData["Title"]</h1>
            <p class="lead">
                We emailed you a verification code
            </p>
        </div>

        <hr />

        <p>
            If you have received a couple verification codes, make sure to enter the most recent one.
            Check your spam, junk and updates folder if you don't see it in your main inbox.
        </p>

        <form id="account" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Input.Username"></label>
                <input asp-for="Input.Username" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Input.Code"></label>
                <input asp-for="Input.Code" class="form-control" autofocus />
            </div>
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary">Verify code</button>
                <div>
                    <a class="btn btn-outline-primary" asp-page="./EmailVerificationRefresh" asp-route-username="@Model.Input.Username" asp-route-returnUrl="@Model.ReturnUrl">Login</a>
                </div>
            </div>
        </form>

    </div>
</div>