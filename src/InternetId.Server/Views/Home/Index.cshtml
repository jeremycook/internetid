<div class="text-center">
    <h1 class="display-4">InternetID</h1>
    <p>
        Securely log into online services with InternetID.
    </p>
    <div class="mb-3">
        @if (User.Identity.IsAuthenticated)
        {
            <a class="btn btn-outline-primary me-2" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hi @User.Identity!.Name</a>
            <form class="d-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Content("~/")">
                <button type="submit" class="btn btn-outline-primary me-2">Logout</button>
            </form>
        }
        else
        {
            <a class="btn btn-outline-primary me-2" asp-area="Identity" asp-page="/Account/Login">Login</a>
            <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Register">Sign up</a>
        }
    </div>
</div>